@page "/"
@using FOBlazorEscalasManager.Services;
@inject NavigationManager UriHelper;
@inject Estado Estado

<div class="container">

<h5>Bienvenid&#64 @Estado.Token.Usuario.Username.ToUpper()!</h5>

<div id="carouselExampleIndicators" class="carousel slide mt-5 d-none d-sm-block" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active" style="background-color:#2f353a"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1" style="background-color:#2f353a"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2" style="background-color:#2f353a"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3" style="background-color:#2f353a"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="4" style="background-color:#2f353a"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="5" style="background-color:#2f353a"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="6" style="background-color:#2f353a"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="7" style="background-color:#2f353a"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/img/Puerto_Las_Nieves.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/img/Puerto_Los_Cristianos.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/img/Puerto_Santa_Cruz_Tenerife.png" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/img/Puerto_La_Gomera.png" alt="Fourth slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/img/Puerto_Las_Palmas.png" alt="Fifth slide">
        </div>
         <div class="carousel-item">
            <img class="d-block w-100" src="/img/Puerto_Playa_Blanca.png" alt="Sixth slide">
        </div>
         <div class="carousel-item">
            <img class="d-block w-100" src="/img/Puerto_Corralejo.png" alt="Seventh slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/img/Portada3.png" alt="Eighth slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <i class="fas fa-chevron-left fa-2x" aria-hidden="true" style="color: #2f353a"></i>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <i class="fas fa-chevron-right fa-2x" aria-hidden="true" style="color: #2f353a"></i>
        <span class="sr-only">Next</span>
    </a>
</div>
</div>

